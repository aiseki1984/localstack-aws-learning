{
  "name": "lambda-api-gateway-posts",
  "version": "1.0.0",
  "description": "Lambda TypeScript + API Gateway CRUD API for posts",
  "main": "dist/index.js",
  "scripts": {
    "test": "vitest run",
    "dev": "tsc -w",
    "build": "esbuild src/index.ts --bundle --minify --platform=node --target=es2020 --outfile=dist/index.js --external:@aws-sdk/*",
    "typecheck": "tsc --noEmit",
    "deploy": "cd .. && ./scripts/deploy.sh",
    "cleanup": "cd .. && ./scripts/cleanup.sh",
    "list-resources": "cd .. && ./scripts/list-resources.sh"
  },
  "keywords": [
    "aws",
    "lambda",
    "api-gateway",
    "typescript",
    "crud",
    "posts"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.705.0",
    "@aws-sdk/lib-dynamodb": "^3.705.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.156",
    "@types/node": "^24.9.1",
    "esbuild": "^0.25.12",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6"
  }
}
