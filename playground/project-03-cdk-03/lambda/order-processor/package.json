{
  "name": "order-processor",
  "version": "1.0.0",
  "description": "Order Processor Lambda - 注文受付とSNS発行",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:esbuild": "esbuild src/index.ts --bundle --minify --platform=node --target=es2020 --outfile=dist/index.js --external:@aws-sdk/*",
    "watch": "tsc --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@aws-sdk/client-sns": "^3.0.0",
    "@aws-sdk/lib-dynamodb": "^3.0.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.0",
    "@types/node": "^20.0.0",
    "esbuild": "^0.27.0",
    "typescript": "^5.0.0"
  }
}
